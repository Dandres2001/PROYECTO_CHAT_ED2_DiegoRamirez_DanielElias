@model IEnumerable<PROYECTO_CHAT_ED2_DiegoRamirez_DanielElias.Models.Users>

@{
    Layout = "PrivateLayout";

}
@{
    ViewData["Title"] = "AddToGroup";
}

<h1>Agregar contacto a grupo</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eMail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.eMail)
            </td>
            <td>
                @Html.ActionLink("Agregar a grupo", "AddToGroupMethod", new {GroupId= ViewData["GroupId"], added = item.Username }) 
     
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Chat">Volver a chats</a>
</div>
